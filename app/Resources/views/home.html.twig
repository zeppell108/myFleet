 {% dump(form) %}
    <div class="well">
        {{ form_start(form, {'attr': {'style':'margin: 2%', 'class':'form-inline'}}) }}
            <div class="container-fluid">
                <div class="panel panel-default row">
                    <div class="panel-heading">
                        <div class="input-group col-xs-12 col-sm-4 col-md-3 col-lg-2">
                            <div class="width80 input-group-addon">
                                <span class="glyphicon glyphicon-bed"></span>
                            </div>
                        {{ form_widget(form.vehicle, {'attr': {'class': 'form-control width160'}} ) }}
                        </div>
                        <div class="input-group col-xs-12 col-sm-4 col-md-3 col-lg-2">
                            {{ form_widget(form.name, {'attr':
                                {'class': 'form-control', 'placeholder': 'wprowadź nazwę zdarzenia'}} ) }}
                        </div>
                        <div id='datetimepicker' class="input-group date col-xs-12 col-sm-4 col-md-3 col-lg-2">
                            <div class="width80 input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </div>
                            {{ form_widget(form.date, {'attr': {'class': 'form-control width160'}} ) }}
                        </div>
                    </div>
                    <div id="formColor" class="panel-body">
                        <div class="input-group col-xs-12 col-sm-4 col-md-3 col-lg-2">
                            <div class="width80 input-group-addon">
                                <span class="glyphicon glyphicon-wrench"></span>
                            </div>
                            {{ form_widget(form.eventElement.children.0.children.serviceType, {'attr':
                                {'class': 'form-control width160'}} ) }}
                        </div>
                        <div class="input-group col-xs-12 col-sm-4 col-md-3 col-lg-2 custom-search-form">
                            <div class="input-group-btn">
                                <button id="searchParts" type="button"
                                        class="btn btn-search btn-default width80" data-toggle="dropdown">
                                    <span class="glyphicon glyphicon-search"></span>
                                    <span class="caret"></span>
                                </button>
                            </div>
                            {{ form_widget(form.eventElement.children.0.children.name, {'attr':
                                {'class': 'form-control width160', 'placeholder': 'wprowadź lub wybierz część'}} ) }}
                        </div>
                        <div class="input-group col-xs-12 col-sm-4 col-md-3 col-lg-2">
                            <div class="width80 input-group-addon">PLN</div>
                            {{ form_widget(form.eventElement.children.0.children.cost, {'attr':
                                {'class': 'form-control width160', 'placeholder': 'wartość wymiany', 'scale' : '2',
                                    'min': '0', 'step': '1'}} ) }}
                        </div>
                        <div class="input-group col-xs-12 col-sm-4 col-md-3 col-lg-2">
                            <div class="width80 input-group-addon">tyś. KM</div>
                            {{ form_widget(form.eventElement.children.0.children.kmPeriod, {'attr':
                                {'class': 'input-period form-control width160', 'placeholder': 'okr. wymiany',
                                'min': '0', 'step': '1'}} ) }}
                        </div>
                        <div class="input-group col-xs-12 col-sm-4 col-md-3 col-lg-2">
                            <div class="width80 input-group-addon">miesięcy</div>
                            {{ form_widget(form.eventElement.children.0.children.monthPeriod, {'attr':
                                {'class': 'input-period form-control width160', 'placeholder': 'okr. wymiany',
                                    'min': '0', 'step': '1'}} ) }}
                        </div>
                            {#<div class="input-group  col-xs-12 col-sm-4 col-md-3 col-lg-2 custom-search-form">#}
                                {#<div class="input-group-btn">#}
                                    {#<button id="searchAutoService" type="button"#}
