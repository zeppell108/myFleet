                                {#<input type="text" class="form-control width160"#}
                                       {#placeholder="wprowadź lub wybierz warsztat">#}
                            {#</div>#}
                    </div>
                    <div class="panel-footer">
                        <div class="input-group col-xs-12 col-sm-4 col-md-3 col-lg-2">
                            <ul class="list-group" data-prototype="{{ form_widget(form.eventElement.vars.prototype)|e('html_attr') }}"></ul>
                        </div>
                        <div class="input-group col-xs-12 col-sm-4 col-md-3 col-lg-2">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary form-control width160'}, 'label': 'Zapisz całe zdarzenie' }) }}
                            {#<button class="btn btn-primary" type="submit">Zapisz całe zdarzenie#}
                                {#<span class="glyphicon glyphicon-floppy-save"></span>#}
                            {#</button>#}
                        </div>
                        {{ form_widget(form.eventElement.children.0.children.event, {'event': form})}}

                    </div>


                </div>
            </div>

        {{ form_end(form, {'render_rest': false}) }}
